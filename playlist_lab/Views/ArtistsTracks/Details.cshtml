@model playlist_lab.ArtistsTracks

@{
    ViewData["Title"] = "Details";
}

<h2 style="margin-top:10px;">Information</h2>

<div>
    <h7>Here you can read some information about tracks</h7>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Track)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Track.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
