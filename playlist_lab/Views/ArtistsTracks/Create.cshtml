@model playlist_lab.ArtistsTracks

@{
    ViewData["Title"] = "Create";
}

<h2 style="margin-top:10px;">Add new song </h2>

<h7>Select song from recently dowloaded data. If there`s no such artist or track, download it first</h7>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Track" class="control-label"></label>
                <select asp-for="TrackId" class ="form-control" asp-items="ViewBag.TrackId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Artist"   class="control-label"></label>
                <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
